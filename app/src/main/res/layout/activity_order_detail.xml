<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">


    <include
        android:id="@+id/main_title"
        layout="@layout/gray_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号:"
                    android:textColor="@color/text_black_two"
                    android:textSize="16sp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待支付"
                    android:textColor="@color/red"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:padding="10dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buy_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/moren_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:visibility="visible"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:drawableLeft="@drawable/icon_per"
                                android:drawablePadding="6dp"
                                android:textColor="@color/text_black_two"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_name_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"

                                android:drawablePadding="6dp"
                                android:drawableLeft="@drawable/icon_phone"
                                android:textColor="@color/text_black_two"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/address_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:textColor="@color/text_black_two"
                            android:textSize="16sp" />
                    </LinearLayout>




                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="六一健康"
                    android:textColor="@color/text_black_two"
                    android:textSize="16sp"
                    android:padding="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="1dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/order_detail" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/image_head"
                    android:layout_toRightOf="@+id/image_head">


                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_two"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/product_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_name"
                        android:layout_marginTop="5dp"
                        android:text="多美"
                        android:textColor="@color/text_black_two"
                        android:textSize="16sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:padding="10dp">

                <TextView
                    style="@style/info_text_left_sec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/free_feel"
                    android:text="商品金额"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/unitprice"
                    style="@style/info_text_left_sec"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="5dp"

                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:padding="10dp">

                <TextView
                    style="@style/info_text_left_sec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/free_feel"
                    android:text="运费"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/freight"
                    style="@style/info_text_left_sec"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="10dp"

                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:visibility="gone"
                android:padding="10dp">

                <TextView
                    style="@style/info_text_left_sec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/free_feel"
                    android:text="优惠券"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/coupon_price"
                    style="@style/info_text_left_sec"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/minus"
                    android:drawablePadding="10dp"
                    android:text="$20"
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#ffffff"
                android:padding="10dp">

                <TextView
                    style="@style/info_text_left_sec"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/free_feel"
                    android:text="总价"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_price"
                    style="@style/info_text_left_sec"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="5dp"

                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    style="@style/info_text_left_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="买家留言"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/et_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请输入内容"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_text1"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:padding="5dp">


                <com.yksj.consultation.son.views.BorderTextView
                    android:id="@+id/gopay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去支付"
                    android:textColor="@color/red"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    app:borderColor="@color/red"/>

                <com.yksj.consultation.son.views.BorderTextView
                    android:id="@+id/callservice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系客服"
                    android:textColor="@color/tab_txt_name"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/gopay"
                    android:textSize="14sp"
                    android:padding="10dp"
                    app:borderColor="@color/black" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
