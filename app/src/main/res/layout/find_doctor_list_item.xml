<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <com.dmsj.newask.Views.CircleImageView
            android:id="@+id/find_doctor_list_item_headicon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/desc"
            android:paddingLeft="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_doctor_list_item_textlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/find_doctor_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/find_doctor_list_item_doctitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/find_doctor_list_item_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/find_doctor_list_item_spetical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/find_doctor_list_item_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:src="@drawable/relation_drawable_list" />

</LinearLayout>