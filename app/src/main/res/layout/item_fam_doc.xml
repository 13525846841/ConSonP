<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/select_expert_list_item_headicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/desc"
                android:paddingLeft="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/select_expert_list_item_textlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/select_expert_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="14sp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/select_expert_list_item_doctitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"
                    android:text="hehe"/>

                <TextView
                    android:id="@+id/select_expert_list_item_docroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray_text"
                    android:layout_marginLeft="5dp"
                    android:text="TextView"
                    android:textSize="12sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/select_expert_list_item_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="hh"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/select_expert_list_item_spetical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="gg"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/select_expert_list_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="1"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/ll_prime_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<TextView-->
                <!--android:id="@+id/prime_cost"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginRight="1dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:paddingLeft="7dp"-->
                <!--android:paddingRight="1dp"-->
                <!--android:text="原价"-->
                <!--android:textColor="@color/gray_text" />-->

            <TextView
                android:id="@+id/prime_cost_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:paddingLeft="1dp"
                android:paddingRight="7dp"
                android:text="500"
                android:textSize="14sp"
                android:textColor="@color/gray_text" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>