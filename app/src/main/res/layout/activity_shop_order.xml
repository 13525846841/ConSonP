<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/main_title"
        layout="@layout/gray_title_layout" />


    <com.yksj.consultation.son.views.PagerSlidingTabStrip
        android:id="@+id/ts_coupon_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/color_blue"
        app:pstsIndicatorHeight="1dp"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="false"
        app:pstsIndicatorTextColor="@color/color_blue">

    </com.yksj.consultation.son.views.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
