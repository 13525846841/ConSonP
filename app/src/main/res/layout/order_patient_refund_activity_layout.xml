<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/gray_title_layout"/>
    <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="16sp"
                 android:textColor="#939393"
                android:text="@string/refund_message" />
    <LinearLayout  android:id="@+id/zhifupay_layout" android:layout_margin="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支 付 宝:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/pay_number" android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请输入支付宝账号" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="确认账号:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/pay_number_to"  android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请确认支付宝账号" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="手机号码:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/pay_phone" android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请输入手机号码" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark" android:maxLength="11"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:visibility="gone" android:id="@+id/yinhang_layout" android:layout_margin="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="收 款 人:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/bank_name" android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请输入收款人姓名" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="银行卡卡号:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/bank_number" android:inputType="phone" android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请输入银行卡账号" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开 户 行:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/bank_type" android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请输入银行卡开户行" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark"/>
        </LinearLayout>
        <LinearLayout android:layout_marginTop="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:textColor="#656565" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="手机号码:"/>
            <EditText android:textColor="#C8C8C8" android:id="@+id/bank_phone" android:textSize="16sp" android:layout_marginLeft="5dp" android:hint="请输入手机号码" android:maxLength="11" android:inputType="none" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/textfield_activated_holo_dark"/>
        </LinearLayout>
    </LinearLayout>
    
	<Button android:id="@+id/action" android:background="@drawable/bt_short_double_green" android:layout_margin="15dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="提交" android:textColor="@color/white"/>
</LinearLayout>
