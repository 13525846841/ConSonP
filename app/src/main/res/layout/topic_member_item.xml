<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    <com.dmsj.newask.Views.CircleImageView
        android:id="@+id/topic_member_item_headicon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/desc" />
    <RelativeLayout 
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/topic_member_item_creflag"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="6dp"
    		android:visibility="gone"
    		android:textColor="@color/color_green_blue_bg"
    		android:text="@string/salon_creator"
            />
        <TextView 
            android:id="@+id/topic_member_item_title"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@id/topic_member_item_creflag"
    		android:layout_marginTop="6dp"
    		android:singleLine="true"
    		android:ellipsize="end"
    		android:text="标题"
            />
        <TextView 
            android:id="@+id/topic_member_item_signature"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@id/topic_member_item_title"
    		android:maxLines="2"
    		android:ellipsize="end"
    		android:layout_marginTop="6dp"
    		android:text="签名我的个性签名签名"
            />
    </RelativeLayout>
    <ImageView 
        android:id="@+id/topic_member_item_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/relation_drawable_list"
        />
	
</LinearLayout>
