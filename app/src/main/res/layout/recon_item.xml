<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/det_img_head"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_centerVertical="true"
                android:src="@drawable/default_head_doctor" />

            <LinearLayout
                android:id="@+id/ll_laoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/det_img_head"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_doc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张医生"
                    android:textColor="@color/tab_txt_name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_doc_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主任医生"
                    android:layout_below="@id/ll_laoshi"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_doc_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京协和医院"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长:"
                android:textColor="@color/gray_text" />

            <TextView
                android:id="@+id/specially"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray_text" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>