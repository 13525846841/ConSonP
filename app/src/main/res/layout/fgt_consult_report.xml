<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/rl_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_opinion"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:gravity="left|top"
                android:hint="@string/input_consult_opinions"
                android:maxLength="1500"
                android:paddingBottom="17.5dp"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:paddingTop="17.5dp"
                android:textColorHint="#898989"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/image_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/icon_voice" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_opinion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|top"
            android:maxLength="5000"
            android:paddingBottom="17.5dp"
            android:paddingLeft="35dp"
            android:paddingRight="21dp"
            android:paddingTop="17.5dp"
            android:textColorHint="#898989"
            android:textSize="14sp"
            android:visibility="gone" />

        <View style="@style/common_split_line" />

        <TextView
            android:id="@+id/tv_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/please_wait_patiently"
            android:textColor="#898989"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/any_question_to_ask_healthhelper"
            android:textColor="#898989"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_addpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/click_and_addpic"
            android:textColor="#898989"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.yksj.consultation.son.views.TagsGridView
            android:id="@+id/gv_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:horizontalSpacing="5dp"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:visibility="gone"></com.yksj.consultation.son.views.TagsGridView>

        <Button
            android:id="@+id/btn_savesubmit"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="20.5dp"
            android:layout_marginRight="20.5dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="@drawable/bt_regist_sure"
            android:scaleType="centerCrop"
            android:text="@string/save_and_submit"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_haveEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:paddingRight="21dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_haveEvaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_arrow"
                android:text="已评价"
                android:textColor="#898989"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrows" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20.5dp"
            android:layout_marginRight="20.5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_regist_sure"
            android:scaleType="centerCrop"
            android:text="预约专家门诊加号"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20.5dp"
            android:layout_marginRight="20.5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_regist_sure"
            android:scaleType="centerCrop"
            android:text="@string/evaluate"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone" />


    </LinearLayout>

</ScrollView>