<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/gray_title_layout" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext_input_bg_white"
        android:hint="请输入姓名"
        android:padding="5dp"
        android:textColor="@color/main_hint"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/age"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_input_bg_white"
            android:gravity="center_vertical"
            android:hint="请选择年龄"
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_input_bg_white"
            android:gravity="center_vertical"
            android:hint="请选择性别"
            android:padding="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/sfz"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext_input_bg_white"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:hint="请输入身份证号码"
        android:maxLength="19"
        android:padding="5dp"
        android:textColor="@color/main_hint"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext_input_bg_white"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:padding="5dp"
        android:textColor="@color/main_hint"
        android:textSize="16sp" />

    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bt_short_green"
        android:text="确\t定"
        android:textColor="@color/white" />
</LinearLayout>