<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/gray_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_conill0"
                style="@style/application_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clinic_illness" />

            <View style="@style/common_split_line" />

            <TextView
                android:id="@+id/tv_illness0"
                style="@style/application_content_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/common_split_line_6dp" />

            <TextView
                android:id="@+id/tv_illdetails0"
                style="@style/application_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="病情说明" />

            <View style="@style/common_split_line" />

            <TextView
                android:id="@+id/tv_illdetail0"
                style="@style/application_content_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <View
                android:id="@+id/view_line6"
                style="@style/common_split_line_6dp" />

            <TextView
                android:id="@+id/tv_illpic0"
                style="@style/application_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="疾病资料照片" />

            <View
                android:id="@+id/view_line"
                style="@style/common_split_line" />

            <HorizontalScrollView
                android:id="@+id/hs_gallery"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="30.5dp"
                android:layout_marginRight="30.5dp"
                android:layout_marginTop="13dp"
                android:background="#AA444444"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/ll_gallery0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <View style="@style/common_split_line_6dp" />

            <TextView
                android:id="@+id/tv_phone0"
                style="@style/application_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="手机号码" />

            <View style="@style/common_split_line" />

            <TextView
                android:id="@+id/tv_phone_content0"
                style="@style/application_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <View style="@style/common_split_line_6dp" />

            <TextView
                style="@style/application_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/clinic_area" />

            <View style="@style/common_split_line" />

            <TextView
                android:id="@+id/tv_adress0"
                style="@style/application_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" />

            <View style="@style/common_split_line_6dp" />

            <RelativeLayout
                android:id="@+id/rl_doctor0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_type0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:text="会诊专家"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_name0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/expert_head0"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#4B4B4B"
                    android:textSize="13sp" />

                <com.dmsj.newask.Views.CircleImageView
                    android:id="@+id/expert_head0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/tv_type0"
                    android:layout_below="@+id/tv_type0"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/expert_header_image" />
            </RelativeLayout>
            <!-- 两个头像 -->

            <RelativeLayout
                android:id="@+id/rl_doctor77"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <!-- 专家头像 -->

                <RelativeLayout
                    android:id="@+id/expert77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="67dp" >

                    <TextView
                        android:id="@+id/tv_type77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="8dp"
                        android:text="会诊专家"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_name77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expert_head77"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#4B4B4B"
                        android:textSize="13sp" />

                    <com.dmsj.newask.Views.CircleImageView
                        android:id="@+id/expert_head77"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/tv_type77"
                        android:layout_below="@+id/tv_type77"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="3dp" />
                </RelativeLayout>
                <!-- 会诊医生头像 -->

                <RelativeLayout
                    android:id="@+id/rl_expertAssistant88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="67dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_type88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/consultation_doctor"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_assis_name88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expert_hed88"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#4B4B4B"
                        android:textSize="13sp" />

                    <com.dmsj.newask.Views.CircleImageView
                        android:id="@+id/expert_hed88"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tv_type88"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="3dp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/common_split_line_6dp"
                android:layout_marginTop="12dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/tv_income0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.5dp"
                    android:text="会诊费用(元)"
                    android:textColor="#4B4B4B"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_rmb0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_count0"
                    android:text="@string/rmb"
                    android:textColor="#FF6666"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_count0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20.5dp"
                    android:textColor="#FF6666"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View style="@style/common_split_line_6dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingRight="20.5dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/tv_applyTime0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.5dp"
                    android:text="@string/apply_time"
                    android:textColor="#4B4B4B"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_applyTime20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#999999"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view_delete0"
                style="@style/common_split_line_6dp" />

            <RelativeLayout
                android:id="@+id/rl_canceled0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="20.5dp"
                android:paddingRight="20.5dp"
                android:paddingTop="12dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_canceled0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:text="@string/canceled"
                    android:textColor="#4B4B4B"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_cancelReason0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_canceled20"
                    android:text="@string/check_cancel_reasons"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tv_canceled20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_fillCaseDeleteServer0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray_bg"
                android:paddingBottom="12dp"
                android:paddingLeft="20.5dp"
                android:paddingRight="20.5dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_fillCaseDeleteServer0"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bt_orange"
                    android:scaleType="centerCrop"
                    android:text="@string/cancel_server"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <View style="@style/common_split_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>