<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/coupon"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/money_number"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:text="120"
        android:textColor="@color/red"
        android:textSize="40sp" />

    <LinearLayout
        android:gravity="center_vertical|right|bottom"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <TextView
            android:clickable="true"
            android:gravity="center_horizontal"
            android:id="@+id/coupon_place"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="北京地区会诊可用"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

        <TextView
            android:clickable="true"
            android:gravity="center_horizontal"
            android:id="@+id/coupon_time"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="2016-1-1至2016-5-5"
            android:textColor="@color/gray_text"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
