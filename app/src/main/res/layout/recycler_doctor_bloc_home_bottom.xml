<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgTopJianTou"
        android:src="@drawable/shijianz_jiantou"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lineBlocLeft"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dsjTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="1018.00.00"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/tvDsjTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="成功举办全国儿童基金，并矩形剪裁仪式"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imgDsj"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:background="@color/gray7" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="140dp">

            <View
                android:layout_width="8.5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#dc9417" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center">

                <View
                    android:id="@+id/viewLeft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#dc9417" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/shape_msgbg" />

                <View
                    android:id="@+id/viewRight"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#dc9417" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/lineBlocRight"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dsjTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1018.00.00"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/tvDsjTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="成功举办全国儿童基金，并矩形剪裁仪式"
                android:textColor="@color/black" />

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imgDsj1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray7" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>