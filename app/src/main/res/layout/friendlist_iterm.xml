<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
     
    <FrameLayout
        android:id="@+id/header_fram"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
         >

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:contentDescription="@string/desc"
            android:src="@drawable/default_head_mankind" />

        <TextView
            android:id="@+id/item_dele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/message_number_background"
            android:contentDescription="@string/desc"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>


    <TextView
        android:id="@+id/name"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/header_fram"
        android:singleLine="true"
        android:text="昵称"
        android:textColor="#1d1d1d"
        android:textSize="15sp" />

    <ImageView
        android:layout_marginTop="1dp"
        android:id="@+id/head_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginRight="@dimen/padding_image_image"
        android:src="@drawable/sex_drawable" 
        android:visibility="visible" />

    <ImageView
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/head_sex"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/padding_image_image"
        android:layout_toRightOf="@id/head_sex"
        android:src="@drawable/v"
        android:visibility="visible" />	

    <ImageView
        android:id="@+id/is_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/head_sex"
        android:layout_marginRight="@dimen/padding_att_right"
        android:src="@drawable/attention" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_att_right"
        android:layout_alignTop="@id/name"
        android:singleLine="true"
        android:textSize="@dimen/list_right_size"
        android:textColor="@color/tab_txt_gray" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/header_fram"
        android:layout_alignLeft="@id/head_sex"
        android:layout_below="@id/head_sex"
       	android:layout_marginTop="1dp"
       	android:lines="2"
       	android:gravity="top"
        android:textColor="@color/tag_note"
        android:textSize="12sp" 
        android:paddingRight="55dp"
        android:text="哈哈哈哈哈哈哈哈哈i阿双方嗲谁覅身份ISAhi分哈斯哈哈哈哈哈哈哈哈哈哈"
        />

    <TextView
        android:id="@+id/register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/is_friend"
        android:singleLine="true"
        android:textColor="#1d1d1d"
        android:textSize="15sp"
        android:visibility="visible" />
      <ImageView
        android:id="@+id/item_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_below="@id/header_fram"
        android:background="@drawable/list_divider_bg" />

</RelativeLayout>