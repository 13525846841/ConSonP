<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="@color/color_gray_bg"
    android:orientation="vertical" >
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:id="@+id/content"
        android:gravity="left"
        android:hint="请输入评论(不多于200字)"
        android:maxLength="200"
        android:background="@drawable/bg_text_content_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />
    <RelativeLayout  android:layout_marginBottom="12dp" android:layout_marginTop="12dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"  >
        <Button
            android:textColor="@color/white"
            android:background="@drawable/bt_short_orange"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/cancle"/>
        <Button
            android:textColor="@color/white"
            android:background="@drawable/bt_short_blue"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="发布"
            android:id="@+id/release"/>
    </RelativeLayout>

</LinearLayout>
