<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="六一健康"
            android:textColor="@color/text_black_two"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:padding="10dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_index_gray_bg"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_goods"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/order_detail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/image_goods"
            android:layout_toRightOf="@+id/image_goods"
            android:orientation="vertical">

            <TextView
                android:id="@+id/good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_two"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/goods_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共一件商品  合计:￥168.00 (含运费8元)"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/tab_txt_name"
            android:padding="10dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">


        <com.yksj.consultation.son.views.BorderTextView
            android:id="@+id/gopay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            app:borderColor="@color/red"/>

        <com.yksj.consultation.son.views.BorderTextView
            android:id="@+id/view_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看订单"
            android:textColor="@color/tab_txt_name"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/gopay"
            android:textSize="14sp"
            android:padding="10dp"
            app:borderColor="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_color"/>
</LinearLayout>