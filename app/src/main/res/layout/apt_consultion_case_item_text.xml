<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="3dp"
    android:gravity="center"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/apt_case_template_item_title" 
        android:layout_width="match_parent"
     	style="@style/title_grey_textview_style"
        android:paddingLeft="0dp"
 		android:visibility="gone"
        />
    <LinearLayout 
        android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:paddingTop="6dp"
		android:paddingBottom="6dp"
 		android:orientation="horizontal"
 		android:gravity="center"
        >
        <TextView 
	        android:id="@+id/apt_case_template_item_text_star" 
	     	android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
	 		android:gravity="center_vertical"
	 		android:textSize="16sp"
	 		android:text="*"
	 		android:paddingLeft="3dp"
	 		android:paddingRight="3dp"
	 		android:visibility="invisible"
	 		android:textColor="#ff6464"/>
        <TextView 
	        android:id="@+id/apt_case_template_item_name" 
	     	android:layout_width="0dp"
	 		android:layout_height="wrap_content"
	 		android:gravity="center_vertical"
	 		android:textSize="16sp"
	 		android:textColor="@color/gray_text"
	 		android:layout_weight="2"/>
    </LinearLayout>
   
    <LinearLayout 
        android:id="@+id/apt_case_template_item_text_layout"
        android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:paddingTop="6dp"
		android:paddingBottom="6dp"
 		android:orientation="horizontal"
 		android:gravity="center"
        >
        <EditText 
	        android:id="@+id/apt_case_template_item_edit_left" 
	     	android:layout_width="0dp"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1"
	 		android:textSize="15sp"
	 		android:visibility="gone"
	 		android:inputType="number"
	 		android:imeOptions="actionDone"
	 		android:gravity="right"
	 		android:background="@drawable/edittext_long_bg"
	        />
	    <TextView 
	        android:id="@+id/apt_case_template_item_text_right" 
	     	android:layout_width="match_parent"
	 		android:layout_height="wrap_content"
	 		android:textSize="15sp"
	 		android:text="@string/please_choise"
	 		android:clickable="true"
	 		android:visibility="gone"
	 		android:textColor="@color/gray_text"
	 		android:gravity="right"
	 		android:background="@drawable/edittext_long_bg"
	        />
	    <EditText 
	        android:id="@+id/apt_case_template_item_edit_right" 
	     	android:layout_width="0dp"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1"
	 		android:textSize="15sp"
	 		android:textColorHint="@color/gray_text"
	 		android:gravity="right"
	 		android:imeOptions="actionDone"
	 		android:background="@drawable/edittext_long_bg"
	        />
    </LinearLayout>
	    
    
    <EditText 
        android:id="@+id/apt_case_template_item_text_edit_big" 
     	android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:gravity="top"
 		android:lines="3"
 		android:visibility="gone"
 		android:textSize="15sp"
 		android:paddingBottom="5dp"
 		android:imeOptions="actionDone"
 		android:background="@null"
        />
    <View style="@style/common_split_line"/>
    <HorizontalScrollView 
        android:id="@+id/apt_case_template_item_img_horscrollview"
        android:layout_width="wrap_content"   
       	android:layout_height="wrap_content" >
	    <LinearLayout 
	        android:id="@+id/apt_case_template_item_img_layout"  
		    android:layout_width="wrap_content"   
		    android:layout_height="82dp"
		    android:layout_marginTop="2dp"
		    android:orientation="horizontal" 
		    android:gravity="center" 
		    android:visibility="gone" >
	        <LinearLayout 
	            android:id="@+id/apt_case_template_item_images"
	            android:layout_width="wrap_content"   
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
	            >
	        </LinearLayout>
        
	        <Button 
	            android:id="@+id/apt_case_template_item_img_add"
	            android:layout_width="78dp"   
		    	android:layout_height="78dp"
		    	android:layout_marginRight="3dp"
		    	android:background="@drawable/img_add_icon"
	            />
    	</LinearLayout>
    </HorizontalScrollView>
    <View 
     	style="@style/common_split_line"/>

</LinearLayout>
