<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector"
    android:descendantFocusability="blocksDescendants" 
    android:orientation="horizontal">

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
    <com.dmsj.newask.Views.CircleImageView
        android:id="@+id/health_topic_item_headicon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:contentDescription="@string/desc"
        />
    <com.dmsj.newask.Views.CircleImageView
        android:id="@+id/health_topic_item_headicon_up"
        android:layout_width="70dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:src="@drawable/health_topic_item_charge"
        android:contentDescription="@string/desc" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:orientation="vertical"
        >
        <TextView
        android:id="@+id/health_topic_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
       	android:maxLines="1"
       	android:ellipsize="end"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/health_topic_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:singleLine="true"
       	android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        />
    <TextView
        android:id="@+id/health_topic_item_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:text="@string/free_of_charge"
        />
    <LinearLayout 
        android:id="@+id/health_topic_item_ticket_laout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        >
        <TextView
	        android:id="@+id/health_topic_item_ticket_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:drawableLeft="@drawable/health_topic_item_ticket_clip"
	        android:textColor="@color/red_text"
	        android:textSize="12sp"
	        android:text="@string/day_ticket_price"
	        />
        <TextView
	        android:id="@+id/health_topic_item_ticket_month"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:drawableLeft="@drawable/health_topic_item_ticket_clip"
	        android:textColor="@color/red_text"
	        android:textSize="12sp"
	        android:text="@string/month_ticket_price"
	        />
    </LinearLayout>
    
    </LinearLayout>
   	<LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:paddingLeft="10dp"
    	android:paddingRight="5dp"
    	android:gravity="center"
    	android:orientation="vertical"
        >
    	<TextView
        android:id="@+id/health_topic_item_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/gray_text"
        android:text="0äºº" />
    <ImageView
        android:id="@+id/health_topic_item_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:padding="6dp"
        />

    </LinearLayout>


   

</LinearLayout>
