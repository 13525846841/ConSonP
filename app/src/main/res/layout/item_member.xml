<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/head_img" />

    <LinearLayout
        android:id="@+id/ll_laoshi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_head"
        android:padding="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_laoshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="小华老师"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/boolean_setup"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/tv_member_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/setup"
                android:visibility="invisible"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_member_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="男"
            android:textColor="@color/gray_text"
            android:layout_marginBottom="10dp"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
