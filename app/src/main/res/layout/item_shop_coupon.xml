<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/coupon_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/shop_coupon">



        <ImageView
            android:id="@+id/couponicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coupon_select"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/money_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="120"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:gravity="center_vertical|right|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupon_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="多美小壹"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="2016-1-1至2016-5-5"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coupon_used"
        android:visibility="gone"
        android:layout_marginLeft="80dp"/>
</RelativeLayout>
