<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pop_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pop_info"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/PopSetItem"
                android:drawableLeft="@drawable/title_pop_info"
                android:text="@string/pop_set_info" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/pop_line" />

        <LinearLayout
            android:id="@+id/pop_phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/PopSetItem"
                android:drawableLeft="@drawable/title_pop_phone"
                android:text="@string/pop_set_phone" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_base_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pop_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/PopSetItem"
                android:drawableLeft="@drawable/title_pop_pwd"
                android:text="@string/pop_set_pwd" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/pop_line" />

        <LinearLayout
            android:id="@+id/pop_out"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/PopSetItem"
                android:drawableLeft="@drawable/title_pop_out"
                android:text="@string/pop_set_out" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_base_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pop_issound"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/PopSetItem"
                android:paddingRight="3dp"
                android:drawableLeft="@drawable/chating_isnopensound"
                android:text="自动语音" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/pop_line" />

        <LinearLayout
            android:id="@+id/pop_nouse"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_40"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="center">

            <TextView
                style="@style/PopSetItem"
                android:drawableLeft="@drawable/title_pop_out"
                android:text="@string/pop_set_out" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_base_line" />
</LinearLayout>