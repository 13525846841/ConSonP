<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_head"
            android:src="@drawable/default_head_patient"
            android:layout_margin="10dp"
            android:layout_width="84dp"
            android:padding="4dp"
            android:layout_height="84dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/ll_laoshi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_head">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_member_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/ll_laoshi" />

            <TextView
                android:id="@+id/tv_member_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/success"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_succ"
                android:layout_marginRight="30dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/failure"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/plan_fail"
                android:layout_marginRight="30dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/plan_share"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/t_share"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30dp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:maxEms="50"
            android:singleLine="false"
            android:ellipsize="end"
            android:textColor="@color/tab_txt_name"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_targe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划目标"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/charge_title_center"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_targe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textSize="16sp"
        android:maxEms="1000"
        android:singleLine="false"
        android:ellipsize="end"
        android:textColor="@color/tab_txt_gray"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划周期"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/charge_title_center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/tab_txt_gray"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_gray_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实施关爱计划"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/charge_title_center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
</LinearLayout>