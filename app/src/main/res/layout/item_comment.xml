<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/case_dis_comment_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/default_head_patient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/case_dis_comment_item_img"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/case_dis_comment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="李某某"
            android:textColor="@color/color_text1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/case_dis_comment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="2016-11-28"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_text1"
            android:textSize="16sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/case_dis_comment_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="此疾病当前医疗条件下虽然难以治疗,但是加以调理也不是不肯能"
            android:textColor="@color/color_text1" />
    </LinearLayout>

</RelativeLayout>