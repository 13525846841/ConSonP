<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<View-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:background="#dad8d8"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"/>-->


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/imDoctorHeader"
        android:layout_marginLeft="20dp"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imDoctorHeader"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/doctorName"
                android:text="张海涛"
                android:textSize="16sp"
                android:textColor="#6dbbb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/department"
                android:text="小儿类风湿科"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:text="名医联诊工作站"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/hospital"
            android:layout_marginTop="4dp"
            android:text="北京第一人民医院"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLook"
                android:text="234"
                android:textSize="12sp"
                android:textColor="#f39ea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="次浏览，"
                android:textSize="12sp"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/doctorCount"
                android:text="234"
                android:textSize="12sp"
                android:textColor="#f39ea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="名医生"
                android:textSize="12sp"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/calender_right"
        android:layout_width="20dp"
        android:layout_height="wrap_content" />

</RelativeLayout>

