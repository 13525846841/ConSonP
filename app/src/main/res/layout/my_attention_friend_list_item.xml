<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    <CheckBox 
        android:id="@+id/my_attention_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:button="@drawable/check_box1"
        android:padding="8dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:checked="false"
        />
    <com.dmsj.newask.Views.CircleImageView
        android:id="@+id/my_attention_item_headicon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:contentDescription="@string/desc" />
    <LinearLayout 
        android:layout_width="0dp"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
            >
            
        <TextView 
            android:id="@+id/my_attention_item_title"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="5dp"
    		android:singleLine="true"
    		android:ellipsize="end"
    		android:text="标题"
            />
        <ImageView
	        android:id="@+id/find_list_item_sex"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/sex_drawable"
	        android:gravity="center_vertical" />
        </LinearLayout>
        <TextView 
            android:id="@+id/my_attention_item_signature"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:maxLines="2"
    		android:ellipsize="end"
    		android:layout_marginTop="6dp"
    		android:text="签名我的个性签名签名"
            />
    </LinearLayout>
    
	
</LinearLayout>
