<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/gray_title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20.0dp"
            android:orientation="vertical">


            <!-- 修改密码 -->
            <LinearLayout
                android:id="@+id/setting_password"
                style="@style/text_check_Linearlayout"
                android:background="@color/white">

                <TextView
                    android:id="@+id/setting_privacy_psw"
                    style="@style/info_text_left"
                    android:layout_width="fill_parent"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/arrows"
                    android:text="@string/setPrivacy" />
            </LinearLayout>

            <View style="@style/common_split_line" />
            <!-- 关于六一健康 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <!-- 关于我们 -->

                <LinearLayout
                    android:id="@+id/setting_update"
                    style="@style/text_check_Linearlayout"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/hunyin"
                        style="@style/info_text_left"
                        android:layout_width="fill_parent"
                        android:drawableRight="@drawable/arrows"
                        android:text="关于我们" />
                </LinearLayout>

                <View style="@style/common_split_line" />
                <!-- 你对六一健康的建议 -->

                <LinearLayout
                    android:id="@+id/setting_feedback"
                    style="@style/text_check_Linearlayout"
                    android:background="@color/white">

                    <TextView
                        style="@style/info_text_left"
                        android:layout_width="fill_parent"
                        android:drawableRight="@drawable/arrows"
                        android:text="@string/setting_feedback" />
                </LinearLayout>

                <View style="@style/common_split_line" />

                <!-- 清理存储空间 -->

                <LinearLayout
                    android:id="@+id/setting_clear_cache"
                    style="@style/text_check_Linearlayout"
                    android:background="@color/white">

                    <TextView
                        style="@style/info_text_left"
                        android:layout_width="fill_parent"
                        android:drawableRight="@drawable/arrows"
                        android:text="@string/setting_leave_qingchuhuancun" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>