<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_gray_bg"
    android:orientation="vertical"
    tools:context="com.yksj.consultation.son.consultation.main.GmNexeActivity">
    <include
        android:id="@+id/title"
        layout="@layout/gray_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银行卡号:"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_gravity="center_vertical"/>

    <EditText
        android:id="@+id/edit_bank_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:hint="请输入银行卡号"
        android:maxLength="16"
        android:inputType="number"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:drawablePadding="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebeff7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持卡人:"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:hint="姓名"
            android:maxLength="16"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:drawablePadding="15dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebeff7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行名称:"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/edit_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:hint="如：中国工商银行"
            android:maxLength="16"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:drawablePadding="15dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebeff7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行:"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/edit_bank_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:maxLength="16"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:hint="如：中国工商银行"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:drawablePadding="15dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebeff7" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银行卡种类:"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_chuxu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/ll_credit">
        <ImageView
            android:id="@+id/iv_chuxu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebeff7" />
    <Button
        android:id="@+id/getmon_next"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:background="@drawable/icon_btn_bg_80"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
