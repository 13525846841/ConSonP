<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/set_title"
        layout="@layout/gray_title_layout" />
   
     
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10.0dp"
         android:orientation="vertical"
         >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp"
        android:layout_gravity="center"
        android:background="@drawable/text_content_background_normal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/setting_feedback_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:gravity="top|left"
            android:hint="@string/setting_feedbackText"
            android:textColorHint="@color/doctor_info_hint"
            android:maxHeight="400dip"
            android:maxLength="500"
            android:minLines="7"
            android:maxLines="10"
            android:textSize="15sp"
            android:textColor="#000000" />
        </LinearLayout>
        <TextView
        android:id="@+id/textcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:text="0/500"
         android:layout_marginRight="15.0dp"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/messageTextSize" />
    </LinearLayout>
</LinearLayout>