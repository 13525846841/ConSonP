<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical"
    tools:context="com.yksj.consultation.son.consultation.news.FamousHosActivity">
    <include
        android:id="@+id/title"
        layout="@layout/gray_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/image_head"
            android:src="@drawable/add"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:padding="4dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/ll_laoshi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_head">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京儿童医院"
                android:textColor="@color/tab_txt_gray"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_member_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合医院"
                android:textSize="14sp"
                android:textColor="@color/tab_txt_gray"
                android:layout_marginTop="5dp"
                android:layout_below="@id/ll_laoshi" />

            <TextView
                android:id="@+id/tv_member_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三级甲等"
                android:textSize="14sp"
                android:textColor="@color/tab_txt_gray"
                android:layout_marginTop="5dp" />
        </LinearLayout>

      </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/location"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_txt_gray"
                android:layout_gravity="center"
                android:text="北京市西城区德外大街11号美江大厦B座（北京天使儿童医院）"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone"
                android:layout_gravity="center"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_txt_gray"
                android:layout_gravity="center"
                android:text="400-820-2345"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="医院介绍"
                android:textSize="18sp"
                android:textColor="@color/tab_txt_gray"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京天使儿童医院"
                android:textColor="@color/tab_txt_gray"
                android:textSize="16sp"
                android:padding="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="医院特色"
                android:textSize="18sp"
                android:textColor="@color/tab_txt_gray"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京天使儿童医院"
                android:textColor="@color/tab_txt_gray"
                android:textSize="16sp"
                android:padding="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="医院荣誉"
                android:textSize="18sp"
                android:textColor="@color/tab_txt_gray"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京天使儿童医院"
                android:textColor="@color/tab_txt_gray"
                android:textSize="16sp"
                android:padding="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预约医院"
                android:textSize="18sp"
                android:textColor="@color/tab_txt_gray"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京天使儿童医院"
                android:textColor="@color/tab_txt_gray"
                android:textSize="16sp"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
