<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="3dp"
    android:gravity="center"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/case_template_item_show_title" 
        android:layout_width="match_parent"
		android:paddingLeft="6dp"
     	style="@style/title_grey_textview_style"
 		android:visibility="gone"
        />
    <LinearLayout 
        android:id="@+id/case_template_item_show_name_layout"
        android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:paddingTop="6dp"
		android:paddingBottom="6dp"
 		android:orientation="horizontal"
 		android:gravity="center"
        >
        <TextView 
	        android:id="@+id/case_template_item_show_star" 
	     	android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
	 		android:gravity="center_vertical"
	 		android:textSize="16sp"
	 		android:text="*"
	 		android:paddingRight="3dp"
	 		android:visibility="gone"
	 		android:textColor="#ff6464"/>
        <TextView 
	        android:id="@+id/case_template_item_show_name" 
	     	android:layout_width="0dp"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1"
	 		android:gravity="center_vertical"
	 		android:textSize="16sp"
	 		android:textColor="@color/gray_text"/>
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/case_template_item_show_text_layout"
        android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:paddingTop="6dp"
		android:paddingBottom="6dp"
		android:paddingLeft="18dp"
 		android:orientation="horizontal"
 		android:gravity="center"
        >
        <TextView 
	        android:id="@+id/case_template_item_show_text_left" 
	     	android:layout_width="0dp"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1"
	 		android:textSize="15sp"
	        />
	    <TextView 
	        android:id="@+id/case_template_item_show_text_middle" 
	     	android:layout_width="match_parent"
	 		android:layout_height="wrap_content"
	 		android:textSize="15sp"
	 		android:clickable="true"
	 		android:visibility="gone"
	        />
	    <TextView 
	        android:id="@+id/case_template_item_show_text_right" 
	     	android:layout_width="0dp"
	 		android:layout_height="wrap_content"
	 		android:layout_weight="1"
	 		android:textSize="15sp"
	 		android:visibility="gone"
	        />
    </LinearLayout>

    <View style="@style/common_split_line"/>

    <HorizontalScrollView 
        android:layout_width="match_parent"   
       	android:layout_height="wrap_content" 
         >
        <LinearLayout 
            android:id="@+id/case_template_item_show_images"
            android:layout_width="wrap_content"   
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
            >
            
        </LinearLayout>
    </HorizontalScrollView>

    <View style="@style/common_split_line"/>

</LinearLayout>
