<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/chat_time"
            android:background="#e2e1dd" />

        <TextView
            android:id="@+id/chat_time"
            style="@style/chat_time"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/chat_time"
            android:background="#e2e1dd" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time_view"
        android:background="@drawable/item_chat_r_bg"
        android:gravity="center"
        android:minWidth="40dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/chat_content"
            style="@style/chatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingRight="5dp"
            android:textIsSelectable="true"
            android:paddingTop="1dp"
            android:textColor="@color/imput_color"
           android:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>
</RelativeLayout>